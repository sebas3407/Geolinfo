               <ListView.ItemTemplate>

                <DataTemplate>
                    
                    <ViewCell>

                        <StackLayout VerticalOptions="Fill"
                            HorizontalOptions="FillAndExpand"
                            Padding="0,15,0,0">

                            <!-- NEW BOARDS -->
                            <StackLayout x:Name="newBoardsStack"
                                VerticalOptions="FillAndExpand">

                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding SelectLandCommand}"/>
                                </StackLayout.GestureRecognizers>

                                <!-- THIS IS WHERE THE NEW BOARDS ARE ADDED -->
                                <StackLayout x:name="boardLayout2"
                                    Padding="10,15"
                                    Orientation="Vertical">
                                    
                                    <Label x:Name="boardNameLabel2"
                                        HorizontalOptions="StartAndExpand"
                                        Text="{Binding Name}"
                                        TextColor="White"
                                        VerticalTextAlignment="Center" />

                                    <StackLayout x:Name="infoLayout2"
                                        Orientation="Horizontal"
                                        HorizontalOptions="End"
                                        Margin="0,-15,0,0">

                                        <Label Text="{Binding BoardMembers}"
                                            HorizontalOptions="End"
                                            TextColor="Green"
                                            FontSize="10"
                                            VerticalTextAlignment="Start"
                                            HorizontalTextAlignment="End"
                                            Margin="0,0,-5,0" />

                                        <Image Source="profile_icon.png"
                                            HorizontalOptions="End"
                                            Margin="0,0,20,0" />

                                        <Image Source="forward.png"
                                            HorizontalOptions="End" />

                                    </StackLayout>

                                    <Label Text="{Binding Capital}"
                                        TextColor="#839199"
                                        HorizontalOptions="StartAndExpand"
                                        FontSize="12"
                                        VerticalTextAlignment="Center"
                                        Margin="0,-10,0,0" />

                                </StackLayout>

                                <BoxView x:Name="separator2"
                                    HeightRequest="1"
                                    Color="White"
                                    Opacity="0.20"
                                    Margin="0,10,0,0" />

                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            </ListView>        
